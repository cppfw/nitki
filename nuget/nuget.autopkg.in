nuget{
	nuspec{
		id = libnitki;
		version : $(version);
		title: C++ threading library;
		authors: {Ivan Gagis};
		owners: {Ivan Gagis};
		licenseUrl: "https://raw.githubusercontent.com/igagis/nitki/master/LICENSE";
		projectUrl: "https://github.com/igagis/nitki";
		iconUrl: "https://github.com/igagis/nitki/blob/master/logo.svg";
		requireLicenseAcceptance:false;
		summary: C++ threading library;

		description: @"C++ threading library";
		releaseNotes: "Initial release";
		copyright: Copyright 2015 Ivan Gagis;
		tags: { native};
	}
	dependencies {
		packages : {
			libutki/1.0.8.6;
			libpogodi/1.0.1.8;
		};
	}
	files {
		//this is needed to put headers in the nitki folder
		nestedInclude: {
			#destination = ${d_include}nitki;
			"..\src\nitki\**\*.hpp"
		};
		
		[x86,release] { 
			lib: ..\msvs_solution\Release\libnitki.lib;
			symbols: ..\msvs_solution\libnitki\Release\libnitki.pdb;
		}

		[x86,debug] { 
			lib: ..\msvs_solution\Debug\libnitki.lib;
			symbols: ..\msvs_solution\libnitki\Debug\libnitki.pdb;
		}

		[x64,release] { 
			lib: ..\msvs_solution\x64\Release\libnitki.lib;
			symbols: ..\msvs_solution\libnitki\x64\Release\libnitki.pdb;
		}

		[x64,debug] { 
			lib: ..\msvs_solution\x64\Debug\libnitki.lib;
			symbols: ..\msvs_solution\libnitki\x64\Debug\libnitki.pdb;
		}  
	}
}
