class Libnitki < Formula
  desc "C++ cross-platform threading library."
  homepage "https://github.com/igagis/nitki"
  url "https://github.com/igagis/nitki/archive/$(version).tar.gz"
  sha256 "$(sha256)"

  depends_on "prorab" => :build
  depends_on "libpogodi"
  depends_on "libutki"

  def install
    system "make", "install"
  end

  test do
    system "make", "test"
  end
end
